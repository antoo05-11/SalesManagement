<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<StackPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../style_main_scene.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="salesmanagement.salesmanagement.ViewController.CustomersTab.CustomerInfoViewController">
   <children>
      <StackPane opacity="0.5" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: grey;" />
      <FlowPane alignment="CENTER">
         <children>
            <VBox fx:id="employeeFilterBox" alignment="TOP_CENTER" prefHeight="296.0" prefWidth="412.0" style="-fx-background-color: white;">
               <children>
                  <StackPane>
                     <children>
                        <Label id="background_color" text="Customer Infomation">
                           <font>
                              <Font size="21.0" />
                           </font>
                        </Label>
                        <JFXButton alignment="CENTER" contentDisplay="GRAPHIC_ONLY" minWidth="46.0" onMouseClicked="#close" prefHeight="30.0" prefWidth="46.0" textAlignment="CENTER" StackPane.alignment="CENTER_RIGHT">
                           <graphic>
                              <FontAwesomeIconView glyphName="CLOSE" size="25" />
                           </graphic>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </JFXButton>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </StackPane>
                  <VBox fillWidth="false" prefHeight="174.0" prefWidth="392.0" spacing="10.0">
                     <children>
                        <VBox prefHeight="170.0" prefWidth="448.0">
                           <children>
                              <Label text="Customer ID" />
                              <TextField fx:id="customerNumberTextField" disable="true" />
                           </children>
                        </VBox>
                        <VBox prefHeight="170.0" prefWidth="448.0">
                           <children>
                              <Label text="Name" />
                              <TextField fx:id="nameTextField" />
                           </children>
                        </VBox>
                        <VBox prefHeight="170.0" prefWidth="448.0">
                           <children>
                              <Label text="Contact" />
                              <TextField fx:id="contactTextField" />
                           </children>
                        </VBox>
                        <VBox prefHeight="170.0" prefWidth="448.0">
                           <children>
                              <Label text="Address" />
                              <TextField fx:id="addressTextField" />
                           </children>
                        </VBox>
                        <VBox prefHeight="170.0" prefWidth="448.0">
                           <children>
                              <Label text="Rank" />
                              <ComboBox fx:id="rankComboBox" disable="true" prefHeight="26.0" prefWidth="106.0" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="46.0" prefWidth="392.0" spacing="20.0">
                     <children>
                        <JFXButton onMouseClicked="#saveCustomerInfo" text="SAVE">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </JFXButton>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
         </children>
      </FlowPane>
   </children>
</StackPane>
