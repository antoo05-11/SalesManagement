<StackPane fx:id="root" prefHeight="707.0" prefWidth="1111.0" stylesheets="@../../style_main_scene.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="salesmanagement.salesmanagement.ViewController.CustomersTab.CustomersTabView">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="997.6">
         <children>
            <HBox>
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="38.0" prefWidth="1477.0" spacing="20.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label id="top_label" text="Customer List">
                           <font>
                              <Font name="System Bold" size="22.0" />
                           </font>
                        </Label>
                        <ProgressIndicator fx:id="loadingIndicator" prefHeight="38.0" prefWidth="32.0" />
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <JFXButton contentDisplay="GRAPHIC_ONLY" onMouseClicked="#show" prefHeight="26.0" prefWidth="26.0">
                           <graphic>
                              <FontAwesomeIconView fill="#329efc" glyphName="UNDO" size="22" />
                           </graphic>
                        </JFXButton>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox>
               <children>
                  <HBox prefHeight="30.0" prefWidth="314.0" HBox.hgrow="ALWAYS">
                     <children>
                        <JFXButton onMouseClicked="#applyFilter" prefHeight="30.0" prefWidth="146.0" text="Customers Filter...">
                           <graphic>
                              <FontAwesomeIconView glyphName="SEARCH" wrappingWidth="20.349998474121094" />
                           </graphic>
                        </JFXButton>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="6.0" prefWidth="1050.0" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <JFXButton onMouseClicked="#add" text="ADD" />
                        <JFXButton onMouseClicked="#export" text="EXPORT" />
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <FilteredTableView fx:id="customersTable" stylesheets="@../../table.css" HBox.hgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="customerNameColumn" prefWidth="98.4000244140625" text="Name" />
                        <TableColumn fx:id="contactColumn" prefWidth="150.0" text="Contact" />
                        <TableColumn fx:id="addressColumn" prefWidth="152.80001831054688" text="Address" />
                        <TableColumn fx:id="rankColumn" prefWidth="250.0" sortable="false" text="Rank" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </FilteredTableView>
               </children>
            </HBox>
         </children>
         <StackPane.margin>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
         </StackPane.margin>
      </VBox>
   </children>
