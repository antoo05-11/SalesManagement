<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" prefHeight="400.0" prefWidth="600.0" stylesheets="@../../css/light-mode/light-mode-main-scene.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="salesmanagement.salesmanagement.ViewController.ProductsTab.ProductInfoView">
    <children>
        <StackPane opacity="0.5" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: grey;" />
        <FlowPane alignment="CENTER">
            <children>
                <VBox fx:id="employeeFilterBox" alignment="TOP_CENTER" prefHeight="396.0" prefWidth="674.0" spacing="10.0" style="-fx-background-color: white; -fx-border-radius: white; -fx-background-radius: white;">
                    <children>
                        <StackPane>
                            <children>
                                <Label id="top_label" fx:id="boxLabel" text="Product Infomation">
                                    <font>
                                        <Font size="21.0" />
                                    </font>
                                </Label>
                                <JFXButton alignment="CENTER" contentDisplay="GRAPHIC_ONLY" minWidth="46.0" onMouseClicked="#close" prefHeight="30.0" prefWidth="46.0" textAlignment="CENTER" StackPane.alignment="CENTER_RIGHT">
                                    <graphic>
                                        <FontAwesomeIconView id="close_color" fill="#0000008f" glyphName="CLOSE" size="25" text="" />
                                    </graphic>
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </JFXButton>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </StackPane>
                  <HBox spacing="30.0">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <children>
                              <VBox fx:id="customerInfoBox" fillWidth="false" prefHeight="174.0" prefWidth="392.0" spacing="10.0">
                                  <children>
                                      <VBox prefHeight="170.0" prefWidth="448.0">
                                          <children>
                                              <Label text="Product Code">
                                                  <font>
                                                      <Font name="System Bold" size="15.0" />
                                                  </font>
                                              </Label>
                                              <TextField fx:id="productCodeTextField">
                                                  <font>
                                                      <Font size="15.0" />
                                                  </font>
                                              </TextField>
                                          </children>
                                      </VBox>
                                      <VBox prefHeight="170.0" prefWidth="448.0">
                                          <children>
                                              <Label text="Product Vendor">
                                                  <font>
                                                      <Font name="System Bold" size="15.0" />
                                                  </font>
                                              </Label>
                                              <TextField fx:id="productVendorTextField">
                                                  <font>
                                                      <Font size="15.0" />
                                                  </font>
                                              </TextField>
                                          </children>
                                      </VBox>
                                      <VBox prefHeight="170.0" prefWidth="448.0">
                                          <children>
                                              <Label text="Buy Price">
                                                  <font>
                                                      <Font name="System Bold" size="15.0" />
                                                  </font>
                                              </Label>
                                              <TextField fx:id="buyPriceTextField">
                                                  <font>
                                                      <Font size="15.0" />
                                                  </font>
                                              </TextField>
                                          </children>
                                      </VBox>
                                      <VBox prefHeight="170.0" prefWidth="448.0">
                                          <children>
                                              <Label text="Product Line">
                                                  <font>
                                                      <Font name="System Bold" size="15.0" />
                                                  </font>
                                              </Label>
                                              <TextField fx:id="productLineTextField">
                                                  <font>
                                                      <Font size="15.0" />
                                                  </font>
                                              </TextField>
                                          </children>
                                      </VBox>
                                  </children>
                              </VBox>
                        <VBox fx:id="customerInfoBox1" fillWidth="false" prefHeight="174.0" prefWidth="392.0" spacing="10.0">
                           <children>
                              <VBox prefHeight="170.0" prefWidth="448.0">
                                 <children>
                                    <Label text="Product Name">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="productNameTextField">
                                       <font>
                                          <Font size="15.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </VBox>
                              <VBox prefHeight="170.0" prefWidth="448.0">
                                 <children>
                                    <Label text="In Stock">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="inStockTextField">
                                       <font>
                                          <Font size="15.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </VBox>
                              <VBox prefHeight="170.0" prefWidth="448.0">
                                 <children>
                                    <Label text="Sell Price">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="sellPriceTextField">
                                       <font>
                                          <Font size="15.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </VBox>
                              <VBox prefHeight="170.0" prefWidth="448.0">
                                 <children>
                                    <Label text="Description">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="descriptionTextField">
                                       <font>
                                          <Font size="15.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                        <StackPane VBox.vgrow="ALWAYS">
                            <children>
                                <JFXButton fx:id="saveButton" onMouseClicked="#save" text="SAVE" visible="false">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </JFXButton>
                                <JFXButton fx:id="addButton" onMouseClicked="#add" text="ADD" visible="false">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </JFXButton>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </StackPane>
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </VBox>
            </children>
        </FlowPane>
    </children>
</StackPane>
