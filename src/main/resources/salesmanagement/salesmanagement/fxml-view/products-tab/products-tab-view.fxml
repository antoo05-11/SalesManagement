<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableView?>

<StackPane fx:id="root" prefHeight="707.0" prefWidth="1111.0" stylesheets="@../../style_main_scene.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="salesmanagement.salesmanagement.ViewController.ProductsTab.ProductsTabView">
    <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="997.6">
        <children>
            <HBox>
                <children>
                    <HBox alignment="CENTER_LEFT" prefHeight="38.0" prefWidth="1477.0" spacing="20.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Label id="top_label" text="Products List" textFill="#329efcab">
                                <font>
                                    <Font name="System Bold" size="22.0" />
                                </font>
                            </Label>
                            <ProgressIndicator fx:id="loadingIndicator" prefHeight="38.0" prefWidth="32.0" />
                        </children>
                    </HBox>
                    <HBox>
                        <children>
                            <JFXButton contentDisplay="GRAPHIC_ONLY" onMouseClicked="#show" prefHeight="26.0" prefWidth="26.0">
                                <graphic>
                                    <FontAwesomeIconView fill="#329efc" glyphName="UNDO" size="22" />
                                </graphic>
                            </JFXButton>
                        </children>
                    </HBox>
                </children>
            </HBox>
            <HBox>
                <children>
                    <HBox prefHeight="30.0" prefWidth="314.0" HBox.hgrow="ALWAYS">
                        <children>
                            <JFXButton onMouseClicked="#addFilter" prefHeight="30.0" prefWidth="146.0" text="Products Filter...">
                                <graphic>
                                    <FontAwesomeIconView glyphName="SEARCH" wrappingWidth="20.349998474121094" />
                                </graphic>
                            </JFXButton>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER_RIGHT" prefHeight="6.0" prefWidth="1050.0" spacing="10.0" HBox.hgrow="ALWAYS">
                        <children>
                            <JFXButton fx:id="addButton" onMouseClicked="#addNewProduct" text="ADD NEW" />
                            <JFXButton onMouseClicked="#openExportProductsBox" text="EXPORT" />
                        </children>
                    </HBox>
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </HBox>
            <HBox VBox.vgrow="ALWAYS">
                <children>
                    <TableView fx:id="productsTable" stylesheets="@../../table.css" HBox.hgrow="ALWAYS">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                  <columns>
                     <TableColumn fx:id="productCodeColumn" prefWidth="163.199951171875" text="Product Code" />
                     <TableColumn fx:id="nameColumn" prefWidth="330.76373291015625" text="Name" />
                     <TableColumn fx:id="productLineColumn" prefWidth="205.0909423828125" text="Product Line" />
                     <TableColumn fx:id="productVendorColumn" prefWidth="254.8363037109375" text="Product Vendor" />
                  </columns>
                    </TableView>
                </children>
            </HBox>
        </children>
        <StackPane.margin>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
        </StackPane.margin>
    </VBox>
</StackPane>
